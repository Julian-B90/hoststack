---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ProviderDirectory from '../../../components/ProviderDirectory.astro';
import strings from '../../../data/i18n/en.json';
import providers from '../../../data/providers.json';
import plans from '../../../data/plans.json';
import { buildProviderIndex } from '../../../lib/providerIndex';

const providersIndex = buildProviderIndex(providers, plans);
---
<BaseLayout lang="en" title="HostStack - Providers" strings={strings}>
  <section class="card">
    <h1 class="text-3xl font-display uppercase tracking-[0.1em]">Providers</h1>
    <p class="mt-3 text-ink/70">All providers in the comparison index.</p>
  </section>

  <ProviderDirectory
    lang="en"
    providersIndex={providersIndex}
    strings={strings}
    basePath="/en/providers"
  />
</BaseLayout>
