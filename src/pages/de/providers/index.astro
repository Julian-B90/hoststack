---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ProviderDirectory from '../../../components/ProviderDirectory.astro';
import strings from '../../../data/i18n/de.json';
import providers from '../../../data/providers.json';
import plans from '../../../data/plans.json';
import { buildProviderIndex } from '../../../lib/providerIndex';

const providersIndex = buildProviderIndex(providers, plans);
---
<BaseLayout lang="de" title="HostStack - Anbieter" strings={strings}>
  <section class="card">
    <h1 class="text-3xl font-display uppercase tracking-[0.1em]">Anbieter</h1>
    <p class="mt-3 text-ink/70">Alle Anbieter im Vergleichsindex.</p>
  </section>

  <ProviderDirectory
    lang="de"
    providersIndex={providersIndex}
    strings={strings}
    basePath="/de/providers"
  />
</BaseLayout>
